{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Form Structure Table",
    "description": "フォーム項目設定表",
    "type": "array",
    "items": {
        "type": "array",
        "properties": {
            "block": {
                "description": "ブロック指定",
                "pattern": "\\S+"
            },
            "label": {
                "description": "行ラベル",
                "type": "string",
                "pattern": "\\S+"
            },
            "type": {
                "description": "type 属性",
                "type": "string",
                "pattern": "\\S+"
            },
            "name": {
                "description": "name 属性",
                "$comment": "type 属性が 'title' の場合に限り、name 属性は空になることがある",
                "type": "string"
            },
            "default": {
                "description": "value 属性のデフォルト値",
                "type": [ "string", "null" ]
            },
            "prepend": {
                "description": "前述文字",
                "type": [ "string", "null" ]
            },
            "append": {
                "description": "後述文字",
                "type": [ "string", "null" ]
            },
            "header_notice": {
                "description": "ヘッダー注釈",
                "type": [ "string", "null" ]
            },
            "body_notice": {
                "description": "注釈",
                "type": [ "string", "null" ]
            },
            "options": {
                "description": "オプション指定",
                "type": [ "string", "null" ]
            },
            "placeholder": {
                "description": "placeholder 属性",
                "type": [ "string", "null" ]
            },
            "for_bcc": {
                "description": "社内通知メールに内容記載するかどうか",
                "type": [ "boolean", "string", "null" ]
            },
            "thanks_to": {
                "description": "入力値をサンクスメールの宛先として使用するかどうか",
                "type": [ "boolean", "string", "null" ]
            },
            "required": {
                "description": "必須かどうか",
                "type": [ "boolean", "string", "null" ]
            },
            "attributes": {
                "description": "追加の属性指定",
                "type": [ "string", "null" ]
            }
        },
        "required": [
            "block",
            "label",
            "type",
            "name",
            "default",
            "prepend",
            "append",
            "header_notice",
            "body_notice",
            "options",
            "placeholder",
            "for_bcc",
            "thanks_to",
            "required",
            "attributes"
        ]
    },
    "minItems": 1
}
